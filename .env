# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
# WARNING: Set DEBUG=False in production to prevent security vulnerabilities
# Debug mode allows arbitrary code execution through the debugger
DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aiplatform
# DATABASE_URL=postgresql://aiplatform:aiplatform@postgres:5432/aiplatform

# Redis Configuration
# REDIS_URL=redis://redis:6379/0
REDIS_URL=redis://localhost:6379

# Email Configuration (Postfix SMTP)
MAIL_SERVER=localhost
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@aiplatform.com

# Midtrans Payment Configuration
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=False

# Rate Limiting Configuration
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_PREMIUM_TIER=100
RATE_LIMIT_ADMIN_TIER=1000

# Admin Configuration
ADMIN_EMAIL=admin@aiplatform.com
ADMIN_PASSWORD=change-this-password

# Model Configuration
DEFAULT_MODEL=gpt4all
MODELS_PATH=/app/models

# Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
