# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
# WARNING: Set DEBUG=False in production to prevent security vulnerabilities
DEBUG=True

# Database Configuration for LOCAL development (not Docker)
# Use localhost instead of 'postgres' for local PostgreSQL
DATABASE_URL=postgresql://aiplatform:aiplatform@localhost:5432/aiplatform
# Or use SQLite for quick local development (no PostgreSQL required):
# DATABASE_URL=sqlite:///app.db

# Redis Configuration for LOCAL development
# Use localhost instead of 'redis' for local Redis
REDIS_URL=redis://localhost:6379/0
# Or leave empty to use in-memory rate limiting:
# REDIS_URL=

# Email Configuration (Postfix SMTP)
MAIL_SERVER=localhost
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@aiplatform.com

# Midtrans Payment Configuration
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=False

# Rate Limiting Configuration
RATE_LIMIT_FREE_TIER=10
RATE_LIMIT_PREMIUM_TIER=100
RATE_LIMIT_ADMIN_TIER=1000

# Admin Configuration
ADMIN_EMAIL=admin@aiplatform.com
ADMIN_PASSWORD=change-this-password

# Model Configuration
DEFAULT_MODEL=gpt4all
MODELS_PATH=./models

# Security
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
